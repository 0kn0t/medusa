<html lang=en>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reversion Report</title>
    <style>
        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
            padding: 1px;
            padding-left: 4px;
            padding-right: 4px;
            white-space: nowrap;
        }
        .table-grid{
            display: grid;
            grid-template-columns: 1fr;
            width: max-content;
        }
        .table-grid th.col-name {
            width: 10%;
        }
        .table-grid th.col-reason {
            width: 40%;
        }
        .table-grid th.col-count {
            width: 6%;
        }
        .table-grid th.col-pct-attrib {
            width: 13%;
        }
        .table-grid th.col-pct-attrib2 {
            width: 13%;
        }
        .table-grid th.col-pct-change {
            width: 23%;
        }
        .numericdata {
            text-align: center
        }
        hr {
            width: 100%
        }

    </style>
</head>

<body>
<header>
    <h1>Reversion Report</h1>
</header>
<hr/>

<h2>Summary</h2>
<table>
    <tr>
        <th>Function</th>
        <th>Call Count</th>
        <th>Revert Count</th>
        <th>Percent Reverted</th>
        <th>Change vs. Prev Run</th>
        <th>Percent Reverted Prev</th>
    </tr>
{{range $funcArtifact := .FunctionArtifacts}}
    <tr>
        <td>{{$funcArtifact.Name}}</td>
        <td class="numericdata">{{$funcArtifact.TotalCalls}}</td>
        <td class="numericdata">{{$funcArtifact.TotalReverts}}</td>
        <td class="numericdata">{{percentageFmt $funcArtifact.RevertPct}}</td>
        <td class="numericdata">{{percentageChangeOpt $funcArtifact.PrevRevertPct $funcArtifact.RevertPct}}</td>
        <td class="numericdata">{{percentageFmtOpt $funcArtifact.PrevRevertPct}}</td>

    </tr>
{{end}}
</table>

<h2>Individual Functions</h2>
<div class="table-grid">
{{range $funcArtifact := .FunctionArtifacts}}
    <h3>{{$funcArtifact.Name}}</h3>
    <p>
    Total Calls: <strong>{{$funcArtifact.TotalCalls}}</strong> <br>
    Total Reverts: <strong>{{$funcArtifact.TotalReverts}}</strong> <br>
    Percentage of calls that reverted: <strong>{{percentageFmt $funcArtifact.RevertPct}}</strong> <br>
    Change in revert % since last run: <strong>{{percentageChangeOpt $funcArtifact.PrevRevertPct $funcArtifact.RevertPct}}</strong> <br>
    Percentage of calls that reverted last run: <strong>{{percentageFmtOpt $funcArtifact.PrevRevertPct}}</strong> <br>
    Revert Details for {{$funcArtifact.Name}}
    </p>
    <table>
        <tr>
            <th class="col-reason">Revert Reason</th>
            <th class="col-count">Count</th>
            <th class="col-pct-attrib2">Percent Attributed</th>
            <th class="col-pct-change">Change vs. Prev Run</th>
            <th class="col-pct-attrib">Percent Attributed Prev.</th>
        </tr>
        {{range $revertArtifact := $funcArtifact.RevertReasons}}
        <tr>
            <td>{{$revertArtifact.Reason}}</td>
            <td class="numericdata">{{$revertArtifact.Total}}</td>
            <td class="numericdata">{{percentageFmt $revertArtifact.PctAttributed}}</td>
            <td class="numericdata">{{percentageChangeOpt $revertArtifact.PrevPctAttributed $revertArtifact.PctAttributed}}</td>
            <td class="numericdata">{{percentageFmtOpt $revertArtifact.PrevPctAttributed }}</td>
        </tr>
        {{end}}
    </table>
    <hr/>
{{end}}
</div>

<script>
    // Add event listeners for collapsible sections to collapse/expand on click.
    const collapsibleHeaders = document.getElementsByClassName("collapsible");
    let i;
    for (i = 0; i < collapsibleHeaders.length; i++) {
        collapsibleHeaders[i].addEventListener("click", function() {
            this.classList.toggle("collapsible-active");

        });
    }

    // If there's only one item and that item has 0% coverage, expand it by default.
    if (collapsibleHeaders.length === 1 && !collapsibleHeaders.className.contains("collapsible-active")) {
        collapsibleHeaders[0].click();
    }
</script>

<hr/>
<footer>
    <center>
        Report generated by medusa
        <br />
        {{timeNow.UTC}}
        <br />
        <a href="https://github.com/crytic/medusa">github.com/crytic/medusa</a>
    </center>
</footer>
</body>
</html>
